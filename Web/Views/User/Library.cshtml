@{
    ViewBag.Title = "Purchased Tracks and Albums";
    Layout = "_Layout";
}

<div class="container">
    <!-- Purchased Tracks Section -->
    <section class="section">
        <h2 class="section-title">Purchased Tracks</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genres</th>
                    <th>Album</th>
                    <th>Artist</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Tracks)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@String.Join(", ", item.Genres)</td>
                        <td>@item?.Album?.Title</td>
                        <td>@item?.Artist?.Name</td>
                        <td>
                            <audio controls>
                                <source src="@item?.FileUrl" type="audio/mpeg">
                            </audio>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <!-- Purchased Albums Section -->
    <section class="section">
        <h2 class="section-title">Purchased Albums</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Release Date</th>
                    <th>Genres</th>
                    <th>Artist</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var album in ViewBag.Albums)
                {
                    <tr class="album-row" data-album-id="@album.Id" style="cursor:pointer;">
                        <td>@album.Title</td>
                        <td>@album.ReleaseDate</td>
                        <td>@String.Join(", ", album.Genres)</td>
                        <td>@album?.Artist?.Name</td>
                    </tr>
                    <tr class="track-list" id="tracks-@album.Id" style="display:none;">
                        <td colspan="5">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Track Title</th>
                                        <th>Genres</th>
                                        <th>Artist</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var track in album.Tracks)
                                    {
                                        <tr>
                                            <td>@track.Title</td>
                                            <td>@String.Join(", ", track.Genres)</td>
                                            <td>@track?.Artist?.Name</td>
                                            <td>
                                                <audio controls>
                                                    <source src="@track?.FileUrl" type='audio/mpeg' />
                                                </audio>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
<style>
    .container {
        padding: 20px;
    }

    .section-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
        border-bottom: 2px solid #f2f2f2;
        padding-bottom: 5px;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid #ddd;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f4f4f4;
    }

    .album-row {
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .track-list {
        background-color: #f9f9f9;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
    }

    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .track-list {
        transition: max-height 0.4s ease-in-out;
        overflow: hidden;
    }

</style>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".album-row").click(function () {
                var albumId = $(this).data("album-id");
                var trackRow = $("#tracks-" + albumId);

                trackRow.toggle(400);
            });
        });
    </script>
}

